<table class="specs-table specsTable">
  <tbody>
    {% if product.metafields.rug-specs.materials != blank %}
      <tr>
        <td>
          Material
        </td>
        <td>
          {{ product.metafields.rug-specs.materials }}
        </td>
      </tr>
    {% endif %}

    {% if product.metafields.rug-specs.backing != blank %}
      <tr>
        <td>
          Backing
        </td>
        <td>
          {{ product.metafields.rug-specs.backing }}
        </td>
      </tr>
    {% endif %}

    {% if product.metafields.rug-specs.construction != blank %}
      <tr>
        <td>
          Construction
        </td>
        <td>
          {{ product.metafields.rug-specs.construction }}
        </td>
      </tr>
    {% endif %}

    {% if product.metafields.rug-specs.country != blank %}
      <tr>
        <td>
          Origin
        </td>
        <td>
          {{ product.metafields.rug-specs.country }}
        </td>
      </tr>
