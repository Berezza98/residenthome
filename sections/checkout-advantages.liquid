{%- if section.blocks.size > 0 -%}
  <section class="checkout-advantages" data-section-id="{{ section.id }}" data-section-type="advantages">
    <div class="checkout-advantages--row">
      {%- for block in section.blocks -%}
        <div class="checkout-advantages--cell">
          <div class="checkout-advantages--item">
            {{- block.settings.text -}}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "Checkout advantages",
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Your text"
        }
      ]
    }
  ]
}
{% endschema %}