{% if section.settings.show_section %}
  <section class="section">
    {%- if section.settings.size_chart_image != blank -%}
      <img class="w-100" src="{{ section.settings.size_chart_image | img_url: 'master' }}" alt="{{ section.settings.title_1 | strip_html }}">
    {%- endif -%}
    {%- if section.settings.size_chart_page != blank -%}
      <div class="container container--narrow">
        <div class="sizechart-table01">
          <h3 class="sizechart-table01--ttl h4 fw-600">Size quide</h3>
          {{ pages[section.settings.size_chart_page].content }}
        </div>
      </div>
    {%- endif -%}
  </section>
{% endif %}

{% schema %}
{
  "name": "Product size chart",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show section",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "size_chart_image",
      "label": "Size chart image"
    },
    {
      "type": "page",
      "id": "size_chart_page",
      "label": "Size chart page"
    }
  ]
}
{% endschema %}