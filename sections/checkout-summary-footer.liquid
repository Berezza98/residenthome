{%- if section.blocks.size > 0 or section.settings.content != blank -%}
  <section class="checkout-summary--footer" data-section-id="{{ section.id }}" data-section-type="checkout-summary-footer">
    {%- if section.blocks.size > 0 -%}
      <div class="checkout-summary--footer-row">
        {%- for block in section.blocks -%}
          <div class="checkout-summary--footer--cell">
            <img src="{{- block.settings.image | img_url -}}" alt="{{- block.settings.text | strip_html -}}">
            {{- block.settings.text -}}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
    {%- if section.settings.title != blank or section.settings.content != blank -%}
      <div class="checkout-summary--footer-content">
        {%- if section.settings.title != blank -%}
          <h2 class="h2">
            {{- section.settings.title -}}
          </h2>
        {%- endif -%}
        {%- if section.settings.content != blank -%}
          <div class="rte">
            {{- section.settings.content -}}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </section>
{%- endif -%}

{% schema %}
{
  "name": "Checkout summary footer",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}