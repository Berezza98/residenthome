{% if section.settings.show_section %}
  <section class="section sec--gallery" data-section-id="{{ section.id }}" data-section-type="gallery">
    {%- if section.settings.title != blank -%}
      <div class="container">
        <h2 class="heading h2 sec--gallery-header">
          {{ section.settings.title }}
        </h2>
        <br>
      </div>
    {%- endif -%}
    <div class="container container--flush">
      <div class="scroller scroller--flush">
        <div class="scroller__inner">
          <div class="product-list product-list--scrollable">
            {%- for block in section.blocks -%}
              <div class="gallery-item 1/2 1/4--lap-and-up">
                <div class="ratio-square-100">
                  <img class="w-100" src="{{ block.settings.image | img_url: 'master' }}" alt="Gallery image {{ forloop.index }}">
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
  {
    "name": "Gallery",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_section",
        "label": "Show section",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Gallery",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}