    {
      "type": "header",
      "content": "Section 1"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1"
    },
    {
      "type": "textarea",
      "id": "text_1",
      "label": "Text 1"
    },
    {
      "type": "color",
      "id": "bg_color_1",
      "label": "Background color 1"
    },
    {
      "type": "header",
      "content": "Section reviews"
    },
    {
      "type": "image_picker",
      "id": "image_reviews",
      "label": "Image reviews"
    },
    {
      "type": "text",
      "id": "title_reviews",
      "label": "Title reviews"
    },
    {
      "type": "textarea",
      "id": "text_reviews",
      "label": "Text reviews"
    },
    {
      "type": "header",
      "content": "Section 2"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2"
    },
    {
      "type": "textarea",
      "id": "text_2",
      "label": "Text 2"
    },
    {
      "type": "header",
      "content": "Section 3"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Title 3"
    },
    {
      "type": "textarea",
      "id": "text_3",
      "label": "Text 3"
    }
  ]
}
{% endschema %}